<div class="container">
    <h1 class="title">Human Consumption</h1>
    <div class="mouth">
        <h2>think of something to eat</h2>
        <form class="new-thing">
                <input type="text" id="something" name="name" placeholder="type something">
            <button type="submit" class="btn btn-danger">put it in your mouth</button>
        </form>
    </div>
    <div class="chew">
        <ul>
            {{#each things}} 
                {{#unless digested}} 
                    {{> thing eat=true}} 
                {{/unless}} 
            {{/each}}
        </ul>
    </div>
    <div class="swallow">
        <ul>
            {{#each things}} 
                {{#if digested}}  
                    {{> thing eat=false}} 
                {{/if}} 
            {{/each}}
        </ul>
    </div>
    <h1 id="end" class="title">THAT WAS GROSS</h1>
</div>